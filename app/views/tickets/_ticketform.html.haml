%div.row
  %div.col-md-6
    = simple_form_for @ticket, html: { class: 'form-horizontal', multipart: true } do |f|
      = f.input 	:name, placeholder: 'Ticket name'
      = f.input :category_id, collection: @categories, label_method: :name, value_method: :id,label: "Category", include_blank: false, selected: @ticket.category_id
      = f.input 	:description, as: :text
      = f.input 	:image, as: :file
      = f.input   :code
      = f.input  	:price
      = f.input  	:stock_quantity
      = f.input   :status
      = f.submit